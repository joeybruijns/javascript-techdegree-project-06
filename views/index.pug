extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 Let's Make the Web Great Together
      p.lead.text-light
        | An overview of the all the projects I build so far with the Treehouse Full Stack JavaScript Techdegree. Feel free to take a look around!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in allProjects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}`)
            h5= project.project_name